<h3>Post a Comment</h3>
<%= form_for [article, article.comments.build] do |f| %>
  <fieldset>
    <div class="col-lg-6">
      <div class="row">
        <div class="form-group">
          <div class="col-lg-12">
            <%= f.text_field :commenter, class: "form-control", placeholder: "Your name" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-12">
            <%= f.text_area :body, class: "form-control", placeholder: "Your comment" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-12">
            <div align="center">
            <%= f.submit "Submit your comment", class: "btn btn-success" %>
          </div>
        </div>
      </div>
      </div>
    </div>
  </fieldset>
<% end %>

